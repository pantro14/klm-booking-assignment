{
  "name": "klm-booking-assignment",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start:graphql-server": "nodemon server/graphql/graphql-server.js",
    "start:api-server": "nodemon server/api/api-server.js",
    "start:client": "ng serve",
    "start:dev": "concurrently 'npm run start:api-server' 'npm run start:graphql-server' 'npm run start:client'",
    "get-booking-schema": "NODE_TLS_REJECT_UNAUTHORIZED=0 npx get-graphql-schema http://localhost:4000/graphql > src/graphql/booking-schema.graphql",
    "update-schema:server": "npm run start:server && npm run get-booking-schema",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.0.0",
    "@angular/common": "^16.0.0",
    "@angular/compiler": "^16.0.0",
    "@angular/core": "^16.0.0",
    "@angular/forms": "^16.0.0",
    "@angular/platform-browser": "^16.0.0",
    "@angular/platform-browser-dynamic": "^16.0.0",
    "@angular/router": "^16.0.0",
    "@apollo/client": "^3.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@ngrx/component": "^16.0.0",
    "apollo-angular": "^5.0.0",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "graphql": "^15.0.0",
    "prettier": "^2.8.8",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.0.2",
    "@angular/cli": "~16.0.2",
    "@angular/compiler-cli": "^16.0.0",
    "@graphql-codegen/cli": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-apollo-angular": "^3.5.6",
    "@graphql-codegen/typescript-operations": "^4.0.0",
    "@types/date-and-time": "^0.13.0",
    "@types/jasmine": "~4.3.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "daisyui": "^3.0.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "typescript": "~5.0.2"
  },
  "type": "module"
}
